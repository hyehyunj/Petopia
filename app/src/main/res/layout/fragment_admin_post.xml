<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".presentation.admin.post.AdminPostLeftFragment">


    <ImageView
        android:id="@+id/admin_post_iv_back"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/sel_btn_left"
        app:layout_constraintBottom_toBottomOf="@id/admin_post_iv_edit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/admin_post_iv_edit" />

    <TextView
        android:id="@+id/admin_post_tv_title"
        style="@style/common_text_20_bold_dark_gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="title"
        app:layout_constraintBottom_toBottomOf="@+id/admin_post_iv_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/admin_post_iv_back" />


    <ImageView
        android:id="@+id/admin_post_iv_edit"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        android:src="@drawable/icon_delete"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginVertical="16dp"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/admin_post_iv_back">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.ramotion.foldingcell.FoldingCell
                android:id="@+id/admin_post_fc_1"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                android:clipChildren="false"
                android:clipToPadding="false"
                app:backSideColor="@color/cloud_red"
                app:layout_constraintBottom_toTopOf="@+id/admin_post_fc_2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/admin_post_fc_1_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/img_login_cloud"
                    android:padding="16dp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/admin_post_fc_1_tv_subtitle"
                        style="@style/point_text_24_dark_gray"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="subtitle"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/admin_post_fc_1_tv_post"
                        style="@style/common_text_16_dark_gray"
                        android:layout_width="match_parent"
                        android:layout_height="480dp"
                        android:layout_marginTop="40dp"
                        android:text="text"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/admin_post_fc_1_tv_subtitle" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <FrameLayout
                    android:id="@+id/admin_post_fc_1_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/admin_post_fc_1_tv_title"
                        style="@style/point_text_32_dark_gray"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:background="@color/cloud_red"
                        android:text="text" />
                </FrameLayout>
            </com.ramotion.foldingcell.FoldingCell>

            <com.ramotion.foldingcell.FoldingCell
                android:id="@+id/admin_post_fc_2"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_marginTop="32dp"
                android:clipChildren="false"
                android:clipToPadding="false"
                app:backSideColor="@color/cloud_lemon"
                app:layout_constraintBottom_toTopOf="@+id/admin_post_fc_3"
                app:layout_constraintEnd_toEndOf="@+id/admin_post_fc_1"
                app:layout_constraintStart_toStartOf="@+id/admin_post_fc_1"
                app:layout_constraintTop_toBottomOf="@+id/admin_post_fc_1">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/admin_post_fc_2_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/img_login_cloud"
                    android:padding="16dp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/admin_post_fc_2_tv_subtitle"
                        style="@style/point_text_24_dark_gray"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="subtitle"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/admin_post_fc_2_tv_post"
                        style="@style/common_text_16_dark_gray"
                        android:layout_width="match_parent"
                        android:layout_height="480dp"
                        android:layout_marginTop="40dp"
                        android:text="text"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/admin_post_fc_2_tv_subtitle" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <FrameLayout
                    android:id="@+id/admin_post_fc_2_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/point_text_32_dark_gray"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:background="@color/cloud_lemon" />
                </FrameLayout>
            </com.ramotion.foldingcell.FoldingCell>


            <com.ramotion.foldingcell.FoldingCell
                android:id="@+id/admin_post_fc_3"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_marginTop="32dp"
                android:clipChildren="false"
                android:clipToPadding="false"
                app:backSideColor="@color/cloud_orange"
                app:layout_constraintBottom_toTopOf="@+id/admin_post_fc_4"
                app:layout_constraintEnd_toEndOf="@+id/admin_post_fc_2"
                app:layout_constraintStart_toStartOf="@+id/admin_post_fc_2"
                app:layout_constraintTop_toBottomOf="@+id/admin_post_fc_2">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/admin_post_fc_3_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/img_login_cloud"
                    android:padding="16dp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/admin_post_fc_3_tv_subtitle"
                        style="@style/point_text_24_dark_gray"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="subtitle"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/admin_post_fc_3_tv_post"
                        style="@style/common_text_16_dark_gray"
                        android:layout_width="match_parent"
                        android:layout_height="480dp"
                        android:layout_marginTop="40dp"
                        android:text="text"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/admin_post_fc_3_tv_subtitle" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <FrameLayout
                    android:id="@+id/admin_post_fc_3_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/point_text_32_dark_gray"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:background="@color/cloud_orange" />
                </FrameLayout>
            </com.ramotion.foldingcell.FoldingCell>

            <com.ramotion.foldingcell.FoldingCell
                android:id="@+id/admin_post_fc_4"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_marginTop="32dp"
                android:clipChildren="false"
                android:clipToPadding="false"
                app:backSideColor="@color/cloud_blue"
                app:layout_constraintBottom_toTopOf="@+id/admin_post_fc_5"
                app:layout_constraintEnd_toEndOf="@+id/admin_post_fc_3"
                app:layout_constraintStart_toStartOf="@+id/admin_post_fc_3"
                app:layout_constraintTop_toBottomOf="@+id/admin_post_fc_3">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/admin_post_fc_4_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/img_login_cloud"
                    android:padding="16dp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/admin_post_fc_4_tv_subtitle"
                        style="@style/point_text_24_dark_gray"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="subtitle"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/admin_post_fc_4_tv_post"
                        style="@style/common_text_16_dark_gray"
                        android:layout_width="match_parent"
                        android:layout_height="480dp"
                        android:layout_marginTop="40dp"
                        android:text="text"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/admin_post_fc_4_tv_subtitle" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <FrameLayout
                    android:id="@+id/admin_post_fc_4_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/point_text_32_dark_gray"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:background="@color/cloud_blue" />
                </FrameLayout>
            </com.ramotion.foldingcell.FoldingCell>

            <com.ramotion.foldingcell.FoldingCell
                android:id="@+id/admin_post_fc_5"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_marginTop="32dp"
                android:clipChildren="false"
                android:clipToPadding="false"
                app:backSideColor="@color/cloud_orange"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/admin_post_fc_4"
                app:layout_constraintStart_toStartOf="@+id/admin_post_fc_4"
                app:layout_constraintTop_toBottomOf="@+id/admin_post_fc_4">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/admin_post_fc_5_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/img_login_cloud"
                    android:padding="16dp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/admin_post_fc_5_tv_subtitle"
                        style="@style/point_text_24_dark_gray"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="subtitle"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/admin_post_fc_5_tv_post"
                        style="@style/common_text_16_dark_gray"
                        android:layout_width="match_parent"
                        android:layout_height="480dp"
                        android:layout_marginTop="40dp"
                        android:text="text"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/admin_post_fc_5_tv_subtitle" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <FrameLayout
                    android:id="@+id/admin_post_fc_5_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/point_text_32_dark_gray"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:background="@color/cloud_purple" />
                </FrameLayout>
            </com.ramotion.foldingcell.FoldingCell>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>