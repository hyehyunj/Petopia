<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/dialog_fragment_background"
    tools:context=".presentation.community.dialogFragment.CommentAddDialogFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_post_create_form"
        android:layout_marginHorizontal="10dp"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tvEditCommentBanner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/community_detail_comment_edit"
            android:textSize="32sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/etEditComment"
            />


        <EditText
            android:id="@+id/etEditComment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="수정할 댓글"
            android:hint="@string/community_detail_hint_comment"
            android:textSize="20sp"
            android:background="@drawable/shape_add_comment"
            android:layout_marginVertical="10dp"
            android:paddingVertical="10dp"
            android:paddingHorizontal="10dp"
            app:layout_constraintTop_toBottomOf="@+id/tvEditCommentBanner"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnEditCommentCancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/shape_add_comment"
            android:backgroundTint="@color/white"
            android:gravity="center"
            android:paddingVertical="15dp"
            android:text="취소"
            android:textColor="@color/gray"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btnEditCommentComplete"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etEditComment" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnEditCommentComplete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_add_comment"
            android:backgroundTint="@color/sub_sky_blue"
            android:gravity="center"
            android:paddingVertical="15dp"
            android:text="수정"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btnEditCommentCancel"
            app:layout_constraintTop_toBottomOf="@+id/etEditComment" />



    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>