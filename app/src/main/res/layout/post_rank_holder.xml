<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:layout_margin="15dp"
    android:background="@drawable/border_round"
    android:elevation="3dp">

    <ImageView
        android:id="@+id/ivRank"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:text="3개월 포숑 사료 추천부탁드립니다"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginStart="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/ivRank"
        app:layout_constraintStart_toEndOf="@id/ivRank"
        app:layout_constraintTop_toTopOf="@+id/ivRank" />

    <TextView
        android:id="@+id/tvWriter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="jaeseon"
        android:textSize="12sp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@+id/ivRank"
        app:layout_constraintTop_toBottomOf="@+id/ivRank"
        app:layout_constraintEnd_toStartOf="@+id/tvCreatedDate"
        />

    <TextView
        android:id="@+id/tvCreatedDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="24.08.03"
        android:textSize="12sp"
        android:layout_marginStart="5dp"
        app:layout_constraintStart_toEndOf="@+id/tvWriter"
        app:layout_constraintTop_toTopOf="@+id/tvWriter"
        />

    <ImageView
        android:id="@+id/ivLike"
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:background="@color/skyblue"
        android:layout_marginStart="5dp"
        app:layout_constraintStart_toEndOf="@+id/tvCreatedDate"
        app:layout_constraintTop_toTopOf="@+id/tvCreatedDate" />

    <TextView
        android:id="@+id/tvLikeCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100"
        android:textSize="13sp"
        android:layout_marginStart="2dp"
        app:layout_constraintStart_toEndOf="@+id/ivLike"
        app:layout_constraintTop_toTopOf="@+id/ivLike" />

    <ImageView
        android:id="@+id/ivViewCount"
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:background="@color/skyblue"
        android:layout_marginStart="5dp"
        app:layout_constraintStart_toEndOf="@+id/tvLikeCount"
        app:layout_constraintTop_toTopOf="@+id/tvLikeCount" />

    <TextView
        android:id="@+id/tvViewCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100"
        android:textSize="13sp"
        android:layout_marginStart="2dp"
        app:layout_constraintStart_toEndOf="@+id/ivViewCount"
        app:layout_constraintTop_toTopOf="@+id/ivViewCount" />


    <ImageView
        android:id="@+id/ivMainImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/border_round"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>