<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <TextView
        android:id="@+id/admin_post_item_tv_page"
        style="@style/common_text_20_bold_blue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:layout_marginTop="50dp"
        android:text="1/5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/admin_post_item_tv_title"
        style="@style/point_text_32_dark_gray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:maxLines="2"
        android:text="Title"
        android:gravity="start"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/admin_post_item_tv_page" />

    <TextView
        android:id="@+id/admin_post_item_tv_sub_title"
        style="@style/common_text_16_dark_gray"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="Title"
        android:gravity="start"
        android:padding="16dp"
        android:layout_marginVertical="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/admin_post_item_tv_title" />

    <com.skydoves.elasticviews.ElasticButton
        android:id="@+id/admin_post_item_btn_more"
        style="@style/common_text_16_bold_white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@drawable/bg_main_blue"
        android:padding="4dp"
        android:text="더보기"
        app:button_duration="100"
        app:layout_constraintTop_toBottomOf="@+id/admin_post_item_tv_sub_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>