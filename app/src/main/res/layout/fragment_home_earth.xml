<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_home_background"
    tools:context=".presentation.home.HomeEarthFragment">


    <ImageView
        android:id="@+id/home_earth_iv_my"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="16dp"
        android:background="@drawable/sel_icon_setting_blue_white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/home_earth_iv_cloud_left"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:layout_constraintDimensionRatio="2:1"
        app:layout_constraintHorizontal_weight="0.5"
        android:background="@drawable/img_earth_clouds"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/home_earth_iv_cloud_right"/>

    <ImageView
        android:id="@+id/home_earth_iv_cloud_right"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:layout_constraintDimensionRatio="2:1"
        android:background="@drawable/img_earth_clouds"
        app:layout_constraintHorizontal_weight="0.5"
        app:layout_constraintStart_toEndOf="@+id/home_earth_iv_cloud_left"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_earth_iv_cloud_left" />


    <ImageView
        android:id="@+id/home_earth_iv_community"
        android:layout_width="50dp"
        android:layout_height="200dp"
        android:layout_marginBottom="50dp"
        android:background="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/home_earth_fab_top"
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:layout_marginBottom="26dp"
        android:src="@drawable/icon_setting_white"
        app:backgroundTint="@color/main_blue"
        app:fabCustomSize="66dp"
        app:maxImageSize="28dp"
        app:rippleColor="@color/sub_sky_blue"
        app:shapeAppearanceOverlay="@style/common_fab"
        app:tint="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/home_earth_iv_community"
        app:layout_constraintEnd_toEndOf="@+id/home_earth_iv_my"/>



    <FrameLayout
        android:id="@+id/home_earth_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>