<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/gallery_holder"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    android:background="@drawable/img_outline_square"
    android:elevation="10dp"
    android:padding="10dp"
    tools:context=".presentation.gallery.GalleryFragment">


    <ImageView
        android:id="@+id/gallery_holder_iv_title"
        android:layout_width="150dp"
        android:layout_height="140dp"
        android:background="@drawable/img_round_square"
        android:clipToOutline="true"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/gallery_holder_tv_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/gallery_holder_iv_unchecked"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/ic_launcher_foreground"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="@+id/gallery_holder_iv_title"
        app:layout_constraintTop_toTopOf="@+id/gallery_holder_iv_title" />

    <ImageView
        android:id="@+id/gallery_holder_iv_checked"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/ic_launcher_background"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="@+id/gallery_holder_iv_title"
        app:layout_constraintTop_toTopOf="@+id/gallery_holder_iv_title" />


    <TextView
        android:id="@+id/gallery_holder_tv_title"
        style="@style/common_text_16_dark_gray"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="제목"
        app:layout_constraintEnd_toEndOf="@+id/gallery_holder_iv_title"
        app:layout_constraintStart_toStartOf="@+id/gallery_holder_iv_title"
        app:layout_constraintTop_toBottomOf="@+id/gallery_holder_iv_title" />


</androidx.constraintlayout.widget.ConstraintLayout>
