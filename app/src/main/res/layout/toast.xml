<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/img_outline_square">

    <ImageView
        android:id="@+id/toast_iv_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="16dp"
        android:background="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/toast_tv_text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="text"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@+id/toast_iv_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/toast_iv_icon"
        app:layout_constraintTop_toTopOf="@+id/toast_iv_icon" />
</androidx.constraintlayout.widget.ConstraintLayout>