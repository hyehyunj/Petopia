<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/gallery_edit_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_ivory"
    android:gravity="center"
    tools:context=".presentation.gallery.GalleryReadFragment">



    <ImageView
        android:id="@+id/gallery_edit_tv_exit"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        android:src="@drawable/sel_btn_left"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/gallery_edit_iv_add"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="20dp"
            android:src="@drawable/icon_album"
            android:padding="100dp"
            android:background="@drawable/img_round_square"
            android:clipToOutline="true"
            android:scaleType="centerCrop"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/gallery_edit_tv_exit" />


        <ImageView
            android:id="@+id/gallery_edit_iv_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="20dp"
            android:background="@drawable/bg_translucent_white_square"
            android:clipToOutline="true"
            android:scaleType="centerCrop"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="@+id/gallery_edit_iv_add"
            app:layout_constraintStart_toStartOf="@+id/gallery_edit_iv_add"
            app:layout_constraintBottom_toBottomOf="@+id/gallery_edit_iv_add"
            app:layout_constraintTop_toTopOf="@+id/gallery_edit_iv_add" />

    <TextView
        android:id="@+id/gallery_edit_iv_calendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_margin="16dp"
        style="@style/common_text_16_dark_gray"
        android:text="날짜설정   "
        app:drawableEndCompat="@drawable/icon_calendar"
        app:layout_constraintBottom_toTopOf="@+id/gallery_edit_et_title"
        app:layout_constraintEnd_toEndOf="@+id/gallery_edit_iv_title"
        app:layout_constraintStart_toStartOf="@+id/gallery_edit_iv_title"
        app:layout_constraintTop_toBottomOf="@+id/gallery_edit_iv_title" />


    <EditText
        android:id="@+id/gallery_edit_et_title"
        style="@style/common_text_16_dark_gray"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="16dp"
        android:hint="사진의 제목을 입력해주세요."
        android:ems="16"
        android:inputType="text"
        android:maxLength="16"
        app:layout_constraintBottom_toTopOf="@+id/gallery_edit_tv_complete"
        app:layout_constraintEnd_toEndOf="@+id/gallery_edit_iv_add"
        app:layout_constraintStart_toStartOf="@+id/gallery_edit_iv_add"
        app:layout_constraintTop_toBottomOf="@+id/gallery_edit_iv_add" />


    <TextView
        android:id="@+id/gallery_edit_tv_complete"
        android:layout_width="120dp"
        android:layout_height="66dp"
        android:text="@string/common_complete"
        android:layout_margin="16dp"
        android:background="@drawable/sel_btn_round_square_blue_white"
        style="@style/common_btn_16_bold_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>


